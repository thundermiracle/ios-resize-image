{
  "name": "ios-resize-image",
  "description": "verify 3 ways to resize image and find out which is also available in iOS safari",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev ./src",
    "build": "next build ./src && next export",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit --project ./src/tsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test-all": "yarn lint && yarn type-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "next": "^10.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.11",
    "@types/react": "^16.9.27",
    "@types/styled-components": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.5",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  }
}
